Package: KBAscope
Title: Scoping Analysis for Key Biodiversity Areas (KBAs)
Version: 0.0.0.9000
Authors@R: c(
    person("Konstantina", "Spiliopoulou", , "konaspilio@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-4636-4905")), 
    person("François", "Rigal", , "frantz.rigal@hotmail.fr", role = c("ctb"),
